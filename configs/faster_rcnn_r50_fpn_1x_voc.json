{
    "data": {
	"train_ann":  "path_to_train_ann_json",
	"test_ann":   "path_to_test_ann_json",
	"train_imgs": "path_to_train_imgs",
	"test_imgs":  "path_to_test_imgs",
	"train_transforms": {"img_scale": [1000, 600],
			     "flip_ratio": 0.5,
			     "img_mean": [123.675, 116.28, 103.53],
			     "img_std":  [58.395, 57.12, 57.375],
			     "pad_divisor": 32},
	"test_transforms":  {"img_scale": [1000, 600],
			     "img_mean": [123.675, 116.28, 103.53],
			     "img_std":  [58.395, 57.12, 57.375],
			     "pad_divisor": 32},
	"train_workers": 4,
	"test_workers":  4},
    "model": {
	"backbone":  {"type": "resnet50",
		      "frozen_stages": 1,
		      "pretrained": "path_to_pretrained_ckpt_or_None"},
	"neck":      {"out_channels": 256,
		      "feat_channels": [256, 512, 1024, 2048],
		      "num_outs": 5},
	"rpn_head":  {"in_channels": 256,
		      "feat_channels": 256,
		      "anchor_opts": {"anchor_scales": [8],
				      "anchor_strides": [4, 8, 16, 32, 64],
				      "anchor_ratios": [0.5, 1.0, 2.0],
				      "center_offset": 0.0},
		      "bbox_coder_opts": {"means": [0.0, 0.0, 0.0, 0.0],
					  "stds":  [1.0, 1.0, 1.0, 1.0]},
		      "loss_cls_opts":  {"type": "BinaryCrossEntropyLoss", "loss_weight":1.0},
		      "loss_bbox_opts": {"type": "L1Loss", "loss_weight": 1.0},
		      "train_opts": {"bbox_assigner_opts": {"pos_iou_thr": 0.7,
							    "neg_iou_thr": 0.3,
							    "min_pos_iou": 0.3,
							    "samp_num": 256,
							    "pos_frac": 0.5,
							    "add_gt": false},
				     "nms_pre": 2000,
				     "nms_post": 1000,
				     "nms_thr": 0.7,
				     "min_bbox_size": 0},
		      "test_opts":  {"nms_pre": 1000,
				     "nms_post": 1000,
				     "nms_thr": 0.7,
				     "min_bbox_size": 0}},
	"rcnn_head": {"in_channels": 256,
		      "fc_out_channels": [1024, 1024],
		      "num_classes": 20,
		      "roi_feat_size": 7,
		      "roi_extractor_opts": {"out_channels": 256,
					     "featmap_strides": [4, 8, 16, 32],
					     "type": "RoIAlign",
					     "output_size": [7, 7],
					     "sampling_ratio": 0,
					     "finest_scale": 56},
		      "bbox_coder_opts": {"means": [0.0, 0.0, 0.0, 0.0],
					  "stds":  [0.1, 0.1, 0.2, 0.2]},
		      "loss_cls_opts":  {"type": "CrossEntropyLoss", "loss_weight": 1.0},
		      "loss_bbox_opts": {"type": "L1Loss", "loss_weight": 1.0},
		      "train_opts": {"bbox_assigner_opts": {"pos_iou_thr": 0.5,
							    "neg_iou_thr": 0.5,
							    "min_pos_iou": 0.5,
							    "samp_num": 512,
							    "pos_frac": 0.25,
							    "add_gt": true}},
		      "test_opts": {"score_thr": 0.05,
				    "nms_thr": 0.5,
				    "max_per_img": 100}}
    },
    "optimizer": {"type": "SGD",
		  "lr": 0.00125,
		  "momentum": 0.9,
		  "weight_decay": 0.0001},
    "lr_opts":   {"decay_epochs": [9, 12],
		  "warmup_steps": 500,
		  "warmup_start": 0.001},
    "total_epochs": 12,
    "save_ckpt_period": 2,
    "log_period": 100
}

